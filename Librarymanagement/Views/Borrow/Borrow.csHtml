@model Librarymanagement.Models.BorrowViewModel;

@{
    var bookId = TempData["BookId"];
    var title = TempData["BookTitle"]?.ToString() ?? string.Empty;
    var author = TempData["Author"]?.ToString() ?? string.Empty;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        padding: 20px;
        max-width: 800px;
        margin: auto;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    .book-details, form {
        background-color: #fff;
        padding: 20px;
        margin: 20px 0;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .book-details div, form div {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="email"],
    input[type="tel"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

    button {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    button:hover {
        background-color: #218838;
    }
</style>

<h1>Borrow Book Details</h1>

<div class="book-details">
    <div><strong>Book ID:</strong> @bookId</div>
    <div><strong>Book Title:</strong> @title</div>
    <div><strong>Author:</strong> @author</div>
</div>

<form asp-controller="Borrow" asp-action="SubmitBorrow" method="post">
    <!-- Hidden field for book ID -->
    <input type="hidden" name="BookId" value="@bookId" />

    <!-- Borrower Name Input -->
    <div>
        @Html.LabelFor(m => m.BorrowerName)
        @Html.TextBoxFor(m => m.BorrowerName, new { @class = "form-control" })
    </div>

    <!-- Email Input -->
    <div>
        @Html.Label("BorrowerEmail", "Your Email:")
        <input name="BorrowerEmail" type="email" required />
    </div>

    <!-- Phone Number Input -->
    <div>
        @Html.Label("Phone", "Your Phone Number:")
        <input name="Phone" type="tel" required />
    </div>

    <!-- Submit Button -->
    <button type="submit">Submit</button>
</form>


