@model Librarymanagement.Models.Book;

<h2>Delete Book</h2>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <div>
        <p><strong>Title:</strong> @Model.Title</p>
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>ISBN:</strong> @Model.ISBN</p>
        <p><strong>Published Date:</strong> @Model.PublishedDate.ToShortDateString()</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="BookId" value="@Model.BookId" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>

